---
import CardShare from "./CardShare"

interface Props {
  avatar: string;
  name: string;
  date: string;
}

const { avatar, name, date } = Astro.props;
---

<div class="flex justify-between px-8 relative">
  <div class="flex items-center gap-2">
    <img
      src={avatar}
      alt="User Avatar"
      class="h-9 rounded-full"
    />
    <div class="flex flex-col text-sm">
      <span class="text-c-darkGBlue font-bold">{name}</span>
      <span class="text-c-desDarkBlue">{date}</span>
    </div>
  </div>
  <CardShare client:only/>
</div>
